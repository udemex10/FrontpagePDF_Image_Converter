{
  "manifest_version": 3,
  "name": "FrontpagePDF Image Converter",
  "version": "1.0",
  "description": "A simple chrome extension that converts pdfs to images and images to pdfs",
  "author": "udemekanem@gmail.com", 
  "permissions": [
      "downloads"
      
  ],
  "optional_host_permissions": [ 
    "*://*/*"
],
  "incognito": "split",
  "action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
  },
  "web_accessible_resources": [{
    "resources":["popup.html"],
    "matches":["<all_urls>"]
  },
  {"resources": ["popup.js"],
   "matches":["<all_urls>"]
    },
   {"resources": ["path-to-stylesheet/style.css"],
    "matches":["<all_urls>"]
    }, 
   {"resources": ["pdf.js"],
    "matches":["<all_urls>"]
    },
   {"resources": ["jspdf.js"],
    "matches":["<all_urls>"]
    },
   {"resources": ["donation-button.css"],
    "matches":["<all_urls>"]
    },
    {"resources": ["https://ko-fi.com"],
    "matches":["<all_urls>"]
    },
    {"resources": ["https://storage.ko-fi.com"],
    "matches":["<all_urls>"]
    }
]
}